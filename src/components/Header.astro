
---
const clean = (p: string) => p.replace(/\/$/, "") || "/";
const isActive = (path: string) => clean(Astro.url.pathname) === clean(path);
---
<header class="header">
    <nav class="nav container">
        <div class="logo">
            <img src="/images/logo.svg" alt="icon" class="logo-img">
        </div>
        <ul class="menu menu-md">
            <li class="menu-table-item"><a href="/" class:list={{ active: isActive('/') }}>Home</a></li>
            <li class="menu-table-item"><a href="/news" class:list={{ active: isActive('/news') }}>News</a></li>
            <li class="menu-table-item"><a href="/podcast" class:list={{ active: isActive('/podcast') }}>Podcast</a></li>
            <li class="menu-table-item"><a href="/resources" class:list={{ active: isActive('/resources') }}>Resources</a></li>
        </ul>
        <div class="contact-button menu-md">
            <a href="">Contact Us</a>
        </div>

        <button class="burger burger-btn burger-md">
            <svg width="34" height="34" viewBox="0 0 34 34" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" clip-rule="evenodd"
                      d="M4.25 9.5625C4.25 8.9757 4.7257 8.5 5.3125 8.5H28.6875C29.2743 8.5 29.75 8.9757 29.75 9.5625C29.75 10.1493 29.2743 10.625 28.6875 10.625H5.3125C4.7257 10.625 4.25 10.1493 4.25 9.5625ZM4.25 17C4.25 16.4132 4.7257 15.9375 5.3125 15.9375H28.6875C29.2743 15.9375 29.75 16.4132 29.75 17C29.75 17.5868 29.2743 18.0625 28.6875 18.0625H5.3125C4.7257 18.0625 4.25 17.5868 4.25 17ZM15.9375 24.4375C15.9375 23.8507 16.4132 23.375 17 23.375H28.6875C29.2743 23.375 29.75 23.8507 29.75 24.4375C29.75 25.0243 29.2743 25.5 28.6875 25.5H17C16.4132 25.5 15.9375 25.0243 15.9375 24.4375Z"
                      fill="white"/>
            </svg>
        </button>
        <ul class="burger-menu burger-md">
            <li class="menu-table-item"><a href="/" class="active">Home</a></li>
            <li class="menu-table-item"><a href="/news">News</a></li>
            <li class="menu-table-item"><a href="/podcast">Podcast</a></li>
            <li class="menu-table-item"><a href="/resources">Resources</a></li>
