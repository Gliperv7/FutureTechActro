---
import Layout from '../layouts/Layout.astro';
import SectionView from "../components/sectionview/SectionView.astro";
import TabsSection from "../components/tabssection/TabsSection.astro";
import HeroSectionSmall from "../components/HeroSectionSmall.astro";
import NewsSection from "../components/newssection/NewsSection.astro";
import ConnectSections from "../components/ConnectSections.astro";
import VideoSection from "../components/VideoSection.astro";


---

<Layout title="news-page">

    <HeroSectionSmall MainText1="Today's Headlines: Stay" MainText2="Informed" MainText3="Explore the latest news from around the world. We bring you up-to-the-minute updates on the most significant events, trends, and stories. Discover the world through our news coverage."  />
    <NewsSection />
    <SectionView heading="Welcome to Out News Hub" description="Discover the World Headlines" link="View All News" path="/news"/>
    <TabsSection text1="All" text2="Technology" text3="Politics" text4="Health" text5="Environment" text6="Sports"/>
    <SectionView heading="Featured Videos" description="Visual Insights for the Modern Viewer" link="View All" path="/news"/>
    <VideoSection/>
    <ConnectSections/>
</Layout>
